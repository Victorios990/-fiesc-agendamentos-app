// frontend/tsconfig.server.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/server",
    "target": "ES2020",
    "module": "CommonJS",
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/main.server.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "src/app/app.server.module#AppServerModule"
  }
}
